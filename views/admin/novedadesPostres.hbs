<style>
    body {
        background-color: aliceblue;
    }
</style>
<main class="container" style="margin-top:2rem; height:800px;">
    <section class="row">
        <div class="col">
            <p class="d-flex justify-content-end align-items-center">
                <span class=" me-3">Hola {{persona}}! </span>
                <a href="/admin/login/logout" class="btn btn-danger ">cerrar sesion
                    <i class="bi bi-box-arrow-right"></i></a>
            </p>
        </div>
    </section>
    <section class="d-flex justify-content-end mb-3 ">
        <a href="/admin/novedades" class="btn btn-primary"><i class="bi bi-box-arrow-left"></i> Inicio</a>
    </section>
    <section class="row mb-4">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado Postres</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedadesPostres/agregar" class="btn btn-success"><i class="bi bi-plus"></i>Nuevo</a>
        </div>
    </section>
    <section class="row text-right">
            <form action="/admin/novedadesPostres" method="get" class="form-inline d-flex col-md-4 col-10">
            <input type="search" class="form-control" placeholder="Buscar.." aria-label="search" name="q">
            <button class="btn btn-secondary my-0 " type="submit"><i class="bi bi-search"></i></button></form>
        </section> 
    <section class="row">
        <div class="col table-responsive" style="max-height:600px; overflow-y:scroll;">
            <table class="table table-hover table-secondary">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedadesPostres}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{descripcion}}</td>
                        <td>{{{imagen}}}</td>
                        <td> <a href="/admin/novedadesPostres/modificar/{{id}}" class="btn btn-success mb-2"><i
                                    class="bi bi-pencil-square"></i></a>
                            <a href="/admin/novedadesPostres/eliminar/{{id}}" class="btn btn-danger mb-2"><i
                                    class="bi bi-x-square"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedadesPostres.length}}
            <p class="text-danger mt-4 pt-5 text-center">No se encontraron resultados para <b>{{q}}</b></p>
            {{/unless}}
            {{/if}}
        </div>
    </section>
</main>