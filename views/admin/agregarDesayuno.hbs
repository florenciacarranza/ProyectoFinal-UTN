<div class="container" style="height:500px;">
    <div class="row mt-4 d-flex flex-column justify-content-center align-items-center">
        <div class="col-lg-5">
            <h4 class="text-white text-center my-4">Agregar Novedad</h4>
            <form action="/admin/novedadesDesayuno/agregar" method="post">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="Titulo.." />
                </div>
                <div class="form-group mt-3">
                    <textarea name="descripcion" cols="30" rows="5" placeholder="descripcion.."
                        class="form-control"></textarea>
                </div>
                {{#if error}}
                <p class="text-danger mt-3"><i class="bi bi-exclamation-triangle-fill"></i>
                    {{message}}</p>
                {{/if}}
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-1">Guardar</button>
                     <a href="/admin/novedadesDesayuno" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>