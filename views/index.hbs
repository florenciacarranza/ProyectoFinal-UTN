<!--VISITANOS-->

<section id="visitanos" class="container-fluid scroll_section">
    <div class="visitanos row mt-4 text-white d-flex align-items-center">
        <div
            class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-2 col-lg-6 offset-lg-0 col-xl-4 offset-xl-1">
            <h2 class="fs-2 mt-4">Visitanos</h2>
            <div data-aos="zoom-in" class="mapa">
                <iframe title="map" class="mx-auto"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3284.2192342901953!2d-58.422682524458565!3d-34.59861737295608!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca62d4cf1563%3A0x686de505d84c67e6!2sAv.%20Medrano%20951%2C%20C1179AAQ%20CABA!5e0!3m2!1ses-419!2sar!4v1684785392013!5m2!1ses-419!2sar"></iframe>
            </div>
        </div>

        <!--contactanos-->

        <div data-aos="zoom-in" data-aos-duration="1000"
            class="mt-4 col-12 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-2 col-lg-5 offset-lg-0 offset-xl-1">
            <h2 class="fs-2">Contactanos</h2>
            <form action="/" method="post">
                <div class="mb-4 mt-5">
                  <input type="text" name="nombre" class="form-control col-12" id="formGroupExampleInput"
                        placeholder="Nombre" required />
                </div>
                <div class="mb-4">
                    <input type="text" name="apellido" class="form-control col-12" id="formGroupExampleInput2"
                        placeholder="Apellido" />
                </div>
                <div class="mb-4">
                    <input type="email" name="email" class="form-control col-12" id="formGroupExampleInput3"
                        placeholder="Email" required />
                </div>
                <div class="mb-4">
                    <textarea name="comentario" class="form-control col-12" id="exampleFormControlTextarea1" rows="3"
                        placeholder="Mensaje..."></textarea>
                </div>
                <p> {{message}}</p>
                <div class="col-12">
                    <button type="submit" class="btn btn-danger">Enviar</button>
                </div>
            </form>            
        </div>
    </div>
</section>